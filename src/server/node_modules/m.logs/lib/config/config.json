
{
  "appenders":
  [
    {
      "type":"console",
      "category":"console"
    },
    {
      "category":"info",
      "type": "file",
      "maxLogSize": 104800,
      "backups": 100,
      "pattern": "info.log"
    },
    {
      "category":"error",
      "type": "dateFile",
      "alwaysIncludePattern": true,
      "pattern": "yyyy-MM-dd-hh.log"
    }
  ],
  "replaceConsole": true,
  "levels":
  {
    "console":"ALL",
    "info":"ALL",
    "error":"ALL"
  }
}
